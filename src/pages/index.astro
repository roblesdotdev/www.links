---
import { Icon } from 'astro-icon/components'
import Layout from '../layouts/Layout.astro'
import links from '~/data/links.json'
---

<Layout title="Aldo R. Robles Links">
  <div class="grid">
    <div class="grid place-items-center gap-12 sm:gap-16">
      <div class="grid max-w-md place-items-center text-center">
        <div class="size-20 rounded-full bg-neutral-200"></div>
        <h1 class="xs:text-2xl mt-6 text-xl font-medium">Aldo R. Robles</h1>
        <p class="xs:leading-7 mt-4 text-neutral-600">
          ðŸ‘‹ Hey there! Here you can find links to my work, personal projects,
          and more.
        </p>
      </div>

      <ul class="flex w-full flex-col gap-2">
        {
          links.map(link => (
            <li>
              <a
                class="flex items-center gap-2 rounded-2xl border p-4 sm:py-6"
                href={link.href}
                target="_blank"
                rel="noopener noreferrer"
              >
                <Icon name={link.icon} />
                <h1>{link.title}</h1>
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</Layout>
